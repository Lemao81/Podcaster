<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Main" parent="AppTheme.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/main_exit</item>
        <item name="android:windowEnterTransition">@transition/main_enter</item>
    </style>

    <style name="ManagePlaylists" parent="AppTheme.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/exit</item>
        <item name="android:windowEnterTransition">@transition/enter</item>
    </style>

    <style name="Download" parent="AppTheme.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/exit</item>
        <item name="android:windowEnterTransition">@transition/enter</item>
    </style>
</resources>
