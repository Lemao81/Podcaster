<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/empty"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="gone"
    android:weightSum="3"
    android:background="@color/scrim_background"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/empty_bg"
        android:orientation="vertical"
        android:padding="@dimen/space_large">

        <TextView
            android:id="@+id/emptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Data could not be loaded, please turn on network connection" />

        <ImageView
            android:id="@+id/emptyImage"
            android:layout_width="@dimen/image_size_normal"
            android:layout_height="@dimen/image_size_normal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_xlarge"
            tools:src="@drawable/ic_wifi_off" />
    </LinearLayout>

</LinearLayout>